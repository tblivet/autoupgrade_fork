<label class="radio-card {% if disabled %} radio-card--disabled {% endif %}" for="radio_card">
  {% if disabledMessage %}
    <div class="radio-card__disabled-message">
      {{ disabledMessage }}
    </div>
  {% endif %}
  <div class="radio-card__radio-wrapper">
    <input class="radio" type="radio" id="radio_card" name="radio_card" {% if disabled %} disabled {% endif %} />
  </div>

  <div class="radio-card__infos-wrapper">
    <div class="radio-card__infos-top radio-card__infos-top">
      <p class="radio-card__title">
        {{ title }}

        {% if badge != null %}
          <span class="radio-card__badge">
            {{ badge }}
          </span>
        {% endif %}
      </p>

      {% if releaseNote != null %}
        <a class="radio-card__release-note" href="{{ releaseNote }}" target="_blank">
          Release note
          <i class="material-icons">open_in_new</i>
        </a>
      {% endif %}
    </div>

    <p class="radio-card__message">{{ message }}</p>

    {% if archiveCard %}
      <div class="radio-card__local-archive">
        {% include '@ModuleAutoUpgrade/components/local-archive.html.twig' %}
      </div>
    {% endif %}

    {% if checkRequirements %}
      <div class="radio-card__check-requirements">
        {% include '@ModuleAutoUpgrade/components/check-requirements.html.twig' %}
      </div>
    {% endif %}
  </div>
</label>
